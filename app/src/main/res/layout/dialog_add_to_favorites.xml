<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/vertical"
    android:background="?attr/dialogBackground"
    android:padding="5dp">

    <TextView style="@style/H3_text" android:text="Команда"/>
    <EditText style="@style/dialogLinearEdit" android:layout_margin="4dp" android:id="@+id/command"/>
    <TextView style="@style/H3_text" android:text="Описание"/>
    <EditText style="@style/dialogLinearEdit" android:layout_margin="4dp" android:id="@+id/description"/>

    <LinearLayout style="@style/horizontalCenter">

        <Button
            android:id="@+id/button_cancel"
            android:text="Отмена"
            android:layout_margin="5dp"
            style="@style/ImageButtonCustom"
            />

        <Button
            android:id="@+id/button_ok"
            android:text="Добавить"
            android:layout_margin="5dp"
            style="@style/ImageButtonCustom"
            />

    </LinearLayout>

</LinearLayout>