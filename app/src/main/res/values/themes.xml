<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SmartTerminal" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="p">@color/blueDark</item>
        <item name="android:windowLightStatusBar" tools:targetApi="p">false</item>
        <item name="android:navigationBarColor" tools:targetApi="p">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="p">true</item>

        <item name="backgroundColor">@color/white</item>
        <item name="backgroundOutside">@color/blueLight</item>
        <item name="ordinaryTextColor">@color/colorPrimary</item>
        <item name="iconsColor">@color/blueLight</item>
        <!---->
        <item name="dialogBigTextTitleColor">@color/white</item>
        <item name="dialogBigTextColor">@color/blueNice</item>
        <item name="dialogTitleColor">@color/blueLight</item>
        <item name="dialogBackground">@color/white</item>
        <item name="dialogBackground2">@color/blueLightLight</item><!--colorLightGray-->
        <item name="dialogSmallTextColor">@color/blueDark</item>
        <item name="EditTextBackgroundColor">@color/blueLightLight</item>
        <!---->
        <item name="recyclerItemColor">@color/blueLight</item>
        <item name="recyclerTextColor">@color/white</item>
        <item name="recyclerDividerColor">@color/colorLightGray</item>
        <!---->

        <item name="customButton">@color/blueLight</item>
        <item name="customButtonPressed">@color/colorPrimary</item>
        <item name="customButtonImageColor">@color/white</item>
        <item name="customButtonTextColor">@color/white</item>

        <item name="coloredText">@color/blueDark</item>

        <item name="navBarGradient">@drawable/side_nav_bar</item>
        <item name="navMenuBackground">@color/white</item>
        <item name="menuTextColor">@color/black</item>

        <item name="tabColor">@color/blueLight</item>
        <item name="tabBigTextColor">@color/white</item>
        <item name="unselectedTabTextColor">@color/colorLightGray</item>
        <item name="selectedTabTextColor">@color/white</item>
        <item name="tabIndicatorCustom">@color/white</item>
        <item name="TitleTextColor">@color/white</item>

        <item name="panelOuterColor">@color/blueLight</item>
        <item name="panelInnerColor">@color/white</item>

        <item name="batteryColor">@color/white</item>
        <item name="batteryColorCharge">@color/green</item>
        <item name="batteryColorLow">@color/red</item>
        <item name="batteryColorBg">@color/blueDark</item>

        <item name="aboutLogoImage">@mipmap/atomtex_blue</item>

        <item name="specLegendColor">@color/black</item>
        <item name="specGraphColor">@color/blueNice</item>
        <item name="SpectrumTextColor">@color/blueDark</item>
        <item name="spectrumNuclideLineColor">@color/dark_green</item>
    </style>
    <style name="Theme.SmartTerminal.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="p">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="p">false</item>
        <item name="android:navigationBarColor" tools:targetApi="p">@color/black</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="p">false</item>

        <item name="backgroundColor">@color/colorBackground</item>
        <item name="backgroundOutside">@color/colorPrimaryDark</item>
        <item name="ordinaryTextColor">@color/white_for_text</item>
        <item name="iconsColor">@color/colorLightGray</item>

        <!---->
        <item name="dialogBigTextTitleColor">@color/white_for_text</item><!--main_orange-->
        <item name="dialogBigTextColor">@color/white_for_text</item><!--main_orange-->
        <item name="dialogTitleColor">@color/colorPrimaryDark</item>
        <item name="dialogBackground">@color/dark_grey</item>
        <item name="dialogBackground2">@color/colorPrimary</item>
        <item name="dialogSmallTextColor">@color/colorLightGray</item>
        <item name="EditTextBackgroundColor">@color/colorPrimary</item>
        <!---->
        <item name="recyclerItemColor">@color/colorPrimary</item>
        <item name="recyclerTextColor">@color/colorLightGray</item>
        <item name="recyclerDividerColor">@color/colorPrimary</item>
        <!---->

        <item name="customButton">@color/colorPrimaryDark</item>
        <item name="customButtonPressed">@color/main_orange</item>
        <item name="customButtonImageColor">@color/colorLightGray</item>
        <item name="customButtonTextColor">@color/colorLightGray</item>

        <item name="coloredText">@color/main_orange</item>

        <item name="navBarGradient">@drawable/side_nav_bar_dark</item>
        <item name="navMenuBackground">@color/colorPrimary</item>
        <item name="menuTextColor">@color/white</item>

        <item name="tabColor">@color/colorPrimaryDark</item>
        <item name="tabBigTextColor">@color/white</item>
        <item name="unselectedTabTextColor">@color/colorGray</item>
        <item name="selectedTabTextColor">@color/white</item>
        <item name="tabIndicatorCustom">@color/main_orange</item>
        <item name="TitleTextColor">@color/main_orange</item><!--white-->

        <item name="panelOuterColor">@color/colorPrimary</item>
        <item name="panelInnerColor">@color/colorPrimaryDark</item>

        <item name="batteryColor">@color/main_orange</item>
        <item name="batteryColorCharge">@color/green</item>
        <item name="batteryColorLow">@color/red</item>
        <item name="batteryColorBg">@color/colorPrimary</item>

        <item name="aboutLogoImage">@mipmap/atomtex_gray</item>

        <item name="specLegendColor">@color/yellow</item>
        <item name="specGraphColor">@color/white</item>
        <item name="SpectrumTextColor">@color/white</item>
        <item name="spectrumNuclideLineColor">@color/green</item>
    </style>
</resources>